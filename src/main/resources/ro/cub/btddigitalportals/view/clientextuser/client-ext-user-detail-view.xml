<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://clientExtUserDetailView.title"
      focusComponent="form">
    <data>
        <instance id="clientExtUserDc"
                  class="ro.cub.btddigitalportals.entity.ClientExtUser">
            <fetchPlan extends="_base"/>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="clientExtUserDc" labelsPosition="ASIDE">
            <formItem>
                <textField id="usernameField" property="username"/>
            </formItem>
            <formItem>
                <textField id="firstNameField" property="firstName"/>
            </formItem>
            <formItem>
                <textField id="lastNameField" property="lastName"/>
            </formItem>
            <formItem>
                <textField id="emailField" property="email"/>
            </formItem>
            <formItem>
                <checkbox id="activeField" property="active"/>
            </formItem>
            <formItem>
                <textField id="timeZoneIdField" property="timeZoneId"/>
            </formItem>
            <formItem>
                <select id="typeField" property="type"/>
            </formItem>
            <formItem>
                <textField id="phoneField" property="phone"/>
            </formItem>
            <formItem>
                <checkbox id="acceptedTermsAndConditionsField" property="acceptedTermsAndConditions"/>
            </formItem>
            <formItem>
                <select id="preferredCommunicationChannelField" property="preferredCommunicationChannel"/>
            </formItem>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseBtn" action="saveAction"/>
            <button id="closeBtn" action="closeAction"/>
        </hbox>
    </layout>
</view>
