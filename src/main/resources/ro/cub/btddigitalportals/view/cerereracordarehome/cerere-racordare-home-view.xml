<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://cerereRacordareHomeView.title">
    <layout>
        <div id="dashboardMainDiv" classNames="dashboardMainDiv">
            <vbox id="firstStepVbox" width="100%" height="100%" justifyContent="CENTER" alignItems="CENTER">
                <hbox id="infoHbox" minHeight="60px"
                      css="background-color: rgb(198, 241, 247); border-radius: 10px;"
                      spacing="true"
                      margin="true"
                      padding="true">
                    <icon icon="vaadin:question-circle" color="rgb(80, 160, 222)"/>
                    <span id="infoTextWithIconSpan" text="msg://firstStep.status.info" css="font-size: 17px; font-weight: 600"/>
                </hbox>
                <radioButtonGroup id="firstStepOptionsRadioGroup" height="70px"
                                  themeNames="vertical" css="margin-bottom: 30px;font-size: 17px; font-weight: 500"/>
                <div id="noGasDashboardCardDeck" classNames="card-deck" visible="false"/>
                <div id="withGasDashboardCardDeck" classNames="card-deck" visible="false"/>
            </vbox>
        </div>
    </layout>
</view>